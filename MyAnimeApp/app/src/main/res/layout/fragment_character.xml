<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CharacterFragment">

    <EditText
        android:id="@+id/animecharacterText"
        android:layout_width="271dp"
        android:layout_height="54dp"
        android:layout_marginStart="67dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="51dp"
        android:ems="10"
        android:hint="enter anime character"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/animenameText" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="277dp"
        android:layout_height="143dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="40dp"
        android:onClick="chooseimage"
        android:src="@drawable/image"
        app:layout_constraintBottom_toTopOf="@+id/animenameText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="Enter How Much Cookies You Want"
        android:hint="e.g 8"/>

    <EditText
        android:id="@+id/animenameText"
        android:layout_width="270dp"
        android:layout_height="53dp"
        android:layout_marginBottom="27dp"
        android:ems="10"
        android:hint="enter anime name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/animecharacterText"
        app:layout_constraintEnd_toEndOf="@+id/animecharacterText"
        app:layout_constraintStart_toStartOf="@+id/animecharacterText"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/button"
        android:layout_width="100dp"
        android:layout_height="58dp"
        android:layout_marginBottom="129dp"
        android:onClick="save"
        android:text="SAVE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/animecharacterText" />
</androidx.constraintlayout.widget.ConstraintLayout>